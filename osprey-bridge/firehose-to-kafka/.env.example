# Adapter Configuration
# Choose input source: 'firehose', 'redis', or 'direct'
ADAPTER_TYPE=firehose

# Firehose Adapter Settings (when ADAPTER_TYPE=firehose)
RELAY_URL=wss://bsky.network
FIREHOSE_CURSOR_FILE=/data/osprey-cursor.txt

# Redis Adapter Settings (when ADAPTER_TYPE=redis)
REDIS_URL=redis://redis:6379
REDIS_STREAM_KEY=firehose:events
REDIS_CONSUMER_GROUP=osprey-consumers
REDIS_CONSUMER_ID=osprey-1

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC=atproto.firehose.enriched
KAFKA_CLIENT_ID=firehose-bridge

# PostgreSQL for event enrichment
DATABASE_URL=postgresql://postgres:password@db:5432/atproto

# Enrichment Options
ENRICH_WITH_PROFILES=true
ENRICH_WITH_HANDLES=true

# Logging
LOG_LEVEL=info
